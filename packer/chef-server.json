{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "azure_client_id": "{{env `AZURE_CLIENT_ID`}}",
    "azure_tenant_id": "{{env `AZURE_TENANT_ID`}}",
    "azure_client_secret": "{{env `AZURE_CLIENT_SECRET`}}",
    "azure_subscription_id": "{{env `AZURE_SUBSCRIPTION_ID`}}",
    "azure_storage_account": "{{env `AZURE_STORAGE_ACCOUNT`}}",
    "azure_resource_group": "{{env `AZURE_RESOURCE_GROUP`}}",
    "chef-server": "12.6.0",
    "domain": "chordata.biz",
    "org": "diprotodontia",
    "build-nodes": "1"
  },

  "builders": [
    { "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-8c4cb0ec",
      "instance_type": "c3.xlarge",
      "communicator": "ssh",
      "associate_public_ip_address": true,
      "ssh_private_ip": false,
      "ssh_username": "ubuntu",
      "ssh_pty" : true,
      "ami_name": "automate-chef-server-{{timestamp}}"
    },
    {
      "type": "azure-arm",
      "client_id": "{{user `azure_client_id`}}",
      "client_secret": "{{user `azure_client_secret`}}",
      "resource_group_name": "{{user `azure_resource_group`}}",
      "storage_account": "{{user `azure_storage_account`}}",
      "subscription_id": "{{user `azure_subscription_id`}}",
      "tenant_id": "{{user `azure_tenant_id`}}",
      "capture_container_name": "images",
      "capture_name_prefix": "chef-server",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "14.04.3-LTS",
      "location": "West US",
      "vm_size": "Standard_D3_V2",
      "os_type": "Linux"
    }
  ],

  "provisioners" : [
    {
      "type": "file",
      "source": "{{template_dir}}/keys/private.pem",
      "destination": "/tmp/private.pem"
    },
    {
      "type": "file",
      "source": "{{template_dir}}/keys/public.pub",
      "destination": "/tmp/public.pub"
    },
    {
      "type": "file",
      "source": "{{template_dir}}/mock-data/recipes/default.rb",
      "destination": "/tmp/create-user-org.rb"
    },
    {
      "type": "file",
      "source": "{{template_dir}}/keys/chef-server.crt",
      "destination": "/tmp/chef-server.crt"
    },
    {
      "type": "file",
      "source": "{{template_dir}}/keys/chef_server.key",
      "destination": "/tmp/chef-server.key"
    },
    {
      "environment_vars": [
        "CHEF_SERVER_VER={{user `chef-server`}}",
        "DOMAIN={{user `domain`}}",
        "ORG={{user `org`}}",
        "BUILD_NODES={{user `build-nodes`}}"
      ],
      "scripts": [
        "{{template_dir}}/scripts/apt.sh",
        "{{template_dir}}/scripts/authorized_keys.sh",
        "{{template_dir}}/scripts/chef-server-install.sh",
        "{{template_dir}}/scripts/chef-server-configure.sh",
        "{{template_dir}}/scripts/etc-hosts.sh"
      ],
      "type": "shell"
    }
  ]
}
