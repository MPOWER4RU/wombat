{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "winrm_username": "Administrator",
    "winrm_password": "RL9@T40BTmXh"
  },

  "builders": [
    { "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-87c037e7",
      "instance_type": "m3.large",
      "communicator": "winrm",
      "associate_public_ip_address": true,
      "ssh_private_ip": false,
      "winrm_port": 5985,
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "user_data_file": "{{template_dir}}/scripts/bootstrap-aws.txt",
      "ami_name": "automate-workstation-{{timestamp}}"
    }
  ],

  "provisioners" : [
    {
      "type": "file",
      "source": "{{template_dir}}/keys/private.pem",
      "destination": "C:\\Windows\\Temp\\private.pem"
    },
    {
      "type": "file",
      "source": "{{template_dir}}/keys/chef_server.crt",
      "destination": "C:\\Windows\\Temp\\chef-server_chef-automate_com.crt"
    },
    {
      "type": "file",
      "source": "{{template_dir}}/keys/delivery_server.crt",
      "destination": "C:\\Windows\\Temp\\delivery-server_chef-automate_com.crt"
    },
    {
      "type": "powershell",
      "inline": [
        "mkdir $env:UserProfile\\.chef",
        "mkdir $env:UserProfile\\.chef\\trusted_certs",
        "mkdir $env:UserProfile\\.ssh",
        "cp C:\\Windows\\Temp\\private.pem $env:UserProfile\\.chef\\private.pem",
        "cp C:\\Windows\\Temp\\chef-server_chef-automate_com.crt $env:UserProfile\\.chef\\trusted_certs\\chef-server_chef-automate_com.crt",
        "cp C:\\Windows\\Temp\\delivery-server_chef-automate_com.crt $env:UserProfile\\.chef\\trusted_certs\\delivery-server_chef-automate_com.crt",
        "cp C:\\Windows\\Temp\\private.pem $env:UserProfile\\.ssh\\id_rsa",
        "Import-Certificate -FilePath $env:UserProfile\\.chef\\trusted_certs\\chef-server_chef-automate_com.crt -CertStoreLocation Cert:\\LocalMachine\\Root",
        "Import-Certificate -FilePath $env:UserProfile\\.chef\\trusted_certs\\delivery-server_chef-automate_com.crt -CertStoreLocation Cert:\\LocalMachine\\Root"
      ]
    },
    {
      "type": "chef-solo",
      "guest_os_type": "windows",
      "cookbook_paths": [ "{{template_dir}}/vendored-cookbooks" ],
      "run_list": [ "workstation" ]
    }
  ]

}
